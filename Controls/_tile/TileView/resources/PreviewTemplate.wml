<ws:partial template="wml!Controls/_tile/TileView/TileTpl"
            itemActionsClass="controls-TileView__itemActions_bottomRight controls-TileView__tileWithImage_itemActions_theme-{{_options.theme}}"
            scope="{{_options}}">
   <ws:contentTemplate>
      <div class="controls-TileView__previewTemplate_content controls-TileView__previewTemplate_content_theme-{{_options.theme}}">
         <ws:partial template="wml!Controls/_tile/TileView/TileImageTemplate"
                     attr:class="controls-TileView__previewTemplate_image controls-TileView__previewTemplate_image_theme-{{_options.theme}}"
                     titleStyle="none"/>
         <span class="controls-TileView__previewTemplate_title
                     controls-TileView__previewTemplate_title_gradient-{{_options.gradientTheme || _options.itemData[_options.gradientThemeProperty] || 'dark' }}_theme-{{_options.theme}}
                     controls-fontsize-l_theme-{{_options.theme}}"
               title="{{itemData.item[itemData.displayProperty]}}">
            {{itemData.item[itemData.displayProperty]}}
         </span>
         <div class="controls-listTemplates__imageTemplate_image_effect-{{effect}}"
              style="{{effect === 'gradient' ? 'background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%,' + (gradientColor || '#ffffff') + ' 100%);' : ''}}"></div>
      </div>
   </ws:contentTemplate>
</ws:partial>
