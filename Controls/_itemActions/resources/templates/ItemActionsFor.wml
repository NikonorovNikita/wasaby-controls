<ws:for data="action in showedActions">
    <ws:if data="{{action.isMenu}}">
        <Controls.dropdown:Button scope="{{itemData.getMenuButtonConfig()}}"
                                  on:dropDownOpen="_onActionMenuDropDownOpen(itemData)"
                                  on:dropDownClose="_onActionMenuDropDownClose(itemData)"/>
    </ws:if>
    <ws:else>
        <ws:partial
                template="wml!Controls/_itemActions/resources/templates/ItemAction"
                itemData="{{itemData}}"
                size="{{size}}"
                action="{{action}}"/>
    </ws:else>
</ws:for>
